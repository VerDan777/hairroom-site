    body
        .site-header
            nav.main-nav: .wrapper
                .main-nav__wrapper
                    .logo.logo--header: img(src="./img/logo.png" alt="main logo")
                    .info
                        ul.info__list
                            li.info__item: p.info__address Калининград<br>Иванникова, 12
                            li.info__item: a.info__phone(href="tel: 523766") 52<span>.</span>37<span>.</span>66
                    
                    .menu-icon: .menu-icon__middle

                .main-menu
                    ul.main-menu__list
                    - let menuItems = ["Салон", "Услуги", "Прайс", "Галлерея", "Контакты"]
                    - let menuLinks = ["#", "services", "price", "gallery", "contacts"]
                    - for(var i = 0; i < 5; i++) 
                            - let link = "#" + menuLinks[i];
                            li.main-menu__item: a.main-menu__link(href=link)= menuItems[i]
                .franchise
                    a.button__franchise(href="franchise.html") Франшиза

            section.hero
                .hero__wrapper
                    h1.hero__title Ваш идеальный салон красоты
                    p.hero__copy Быть свободной значит быть разной, меняте свой стиль под любое настроение. Не важно, что вас ждет сегодня: серьезное событие или романтический вечер - будьте неотразимы!
                    a.button.button--online-record(href="#") online&nbsp;запись
                    .hero__img: img(src="./img/women.png" alt="women")
                    p.title__description Hair Room kaliningrad
                    .socials
                        ul.socials__list
                            - let socialItems = ["instagram", "facebook", "vkontakte"]
                            - let socialLinks = ["instagram.com", "facebook.com", "vk.com"]
                            - for(let i = 0; i < 3; i++)
                                li.socials__item: a.socials__link(href= socialLinks[i])= socialItems[i]
            nav.scroll-spy
                ul.scroll-spy__list
                    - let scrollItems = ["Салон", "Услуги", "Прайс", "Галлерея", "Контакты"]
                    - let scrollLinks = ["#", "services", "price", "gallery", "contacts"]
                    - for(let i =0; i < 5; i++)
                        - let link = "#" + scrollLinks[i]
                        li.scroll__spy-item: a.scroll__spy-link(href=link data-label!= scrollItems[i] id= (scrollLinks[i] + "-link"))= scrollItems[i]
        
        section.about: .wrapper
            .about__img
            .about__wrapper
                .about__card
                    sup.title__sup О салоне
