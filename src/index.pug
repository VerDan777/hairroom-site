                a.button.button--pink(href="#") online Запись
                a.button.button--ghost(href="#price") прайс-лист

                .logo.logo--about: img(src="./img/logo-white.png" alt="logo white")

        section.services: .wrapper
            header.services__header
                h4.title__sup Мы предлагаем
                h3.title__section Услуги

            article.services__card
                h5.servces__card-title Наращивание волос
                .services__card-content
                .services__card-img: img(src="./img/card1.png" alt="card img 1")

            article.services__card
                h5.servces__card-title Маникюр
                .services__card-content
                     p.title__description.title__description--left Hair Room Услуги
                     p.services__card-description бесцветный розовый с нейтрализацией желтизны
                     a.button.button--pink.button--card(href="#") Записаться
                     a.button.button--ghost.button--card(href="#") Прайс-лист
                .services__card-img: img(src="./img/card2.png" alt="card img 2")
                
            article.services__card
                h5.servces__card-title Дополнительные услуги
                .services__card-content
                .services__card-img: img(src="./img/card3.png" alt="card img 3")

            article.services__card
                h5.servces__card-title Наращивание ресниц
                .services__card-content
                .services__card-img: img(src="./img/card4.png" alt="card img 4")

        section.price: .wrapper
            header.price__header
                h4.title__sup.title__sup--white Цены на услуги
                h3.title__section.title__section--white Прайс-лист
            .price-wrapper
                .price-inner__column
                    table.price-table
                        caption Основные услуги
                        tr
                            td Наращивание волос
                            td 1200 <span>р.</span>
                        tr 
                            td Маникюр
                            td 1000 <span>р.</span>
                        tr
                            td Уход за волосами
                            td 2000 <span>р.</span>
                    
                .price-inner__column.price-inner__column--right
                    table.price-table
                        caption Дополнительные услуги
                            tr
                                td Наращивание ресниц
                                td 2500 <span>р.</span>

                .price-inner__column

